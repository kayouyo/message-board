<div class="panel panel-danger">
  <div class="panel-heading">
    List of Miffy's Friends
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-danger col-md-1" ><%= message.name %></span>
      <span class="label label-warning col-md-1">  <%= message.age %></span>
      <span class="col-md-3">  <%= message.body %></span>
        <button type="button" class="btn btn-link btn-sm" ><%= link_to "edit" , edit_message_path(message) %></button>
         <button type="button" class="btn btn-link btn-sm" ><%= link_to "destroy" , message , method: :delete, data: { confirm: 'Do you really want to delete friend of Miffy？' } %></button>
        
      <br>
    <% end %>
  </div>
</div>

