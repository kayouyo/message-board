<div class="panel panel-danger">
  <div class="panel-heading">
    List of Miffy's Friends
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-danger"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>





<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <label for="message_name" class="control-label col-md-1">Name:</label>
  <%= f.text_field :name, :class=> "form-control" %>
  <br>
  <label for="message_body" class="control-label col-md-1">Description:</label>
  <br>
  <%= f.text_area :body, :class=>"form-control" %>
  <br>
  <%= f.submit "Make New Friends", class: "btn btn-sm btn-danger" %>
<% end %>