<div class="panel panel-danger">
  <div class="panel-heading">
    List of Miffy's Friends
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-danger"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>



<%= form_for(@message) do |f| %>
  Name:
  <%= f.text_field :name %>
  <br>
  Description:
  <br>
  <%= f.text_area :body, size: "29x10"  %>
  <br>
  <%= f.submit "Make New Friends", class: "btn btn-sm btn-danger" %>
<% end %>